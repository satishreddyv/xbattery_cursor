{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Configure",
            "type": "shell",
            "command": "cmake",
            "args": ["-B","build","-S",".","-DCMAKE_TOOLCHAIN_FILE=cmake/arm-none-eabi-gcc.cmake"],
            "options": { "cwd": "${workspaceFolder}" },
            "group": "build"
        },
        {
            "label": "Build",
            "type": "shell",
            "command": "cmake",
            "args": ["--build","build","--config","Debug"],
            "options": { "cwd": "${workspaceFolder}" },
            "group": { "kind": "build", "isDefault": true },
            "dependsOn": "Configure"
        },
        {
            "label": "Clean",
            "type": "shell",
            "command": "cmake",
            "args": ["--build","build","--target","clean"],
            "options": { "cwd": "${workspaceFolder}" },
            "group": "build"
        }
    ]
}